{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "stripInternal": true,
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "emitDeclarationOnly": true,
    "outFile": "dist/index.js"
  },
  "include": ["src/**/*"]
}
