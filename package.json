{
  "name": "ampere",
  "version": "0.0.0",
  "type": "module",
  "main": "./bin/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsc && tsx ./run.ts",
    "release": "npm run build && npm publish",
    "dev": "concurrently \"npm run dev:tailwind\" \"npm run dev:esbuild\" \"npm run dev:bare\"",
    "dev:tailwind": "tailwindcss -i ./public/index.css -o ./public/style.css --watch --minify",
    "dev:bare": "bare-server-node --port 8080",
    "dev:esbuild": "tsx ./run.ts --dev",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@tomphttp/bare-client": "2.2.0-alpha",
    "acorn": "^8.11.3",
    "acorn-loose": "^8.4.0",
    "astring": "^1.8.6",
    "css-tree": "^2.3.1",
    "estree-walker": "^3.0.3",
    "meriyah": "^4.3.9",
    "parse5": "^7.1.2"
  },
  "devDependencies": {
    "@tomphttp/bare-server-node": "^2.0.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/crypto-js": "^4.2.1",
    "@types/css-tree": "^2.3.4",
    "@types/estree": "^1.0.5",
    "@types/node": "^20.10.8",
    "concurrently": "^8.2.2",
    "crypto-js": "^4.2.0",
    "esbuild": "^0.19.11",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-server": "^0.3.0",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
